<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.puzzlegame.YouWin"
    android:background="#408223">

    <TextView
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#f6f7fa" />

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/message"
        android:gravity="center"
        android:text="You are win"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f6f7fa"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/scoreMessage"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f6f7fa" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/scoreMessage"
        android:text="  Next  "
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:background="#e37c7c"
        android:textColor="#050df3" />

    <TextView
        android:id="@+id/textView4"
        android:gravity="center"
        android:text="Your Total Move 375"
        android:textSize="36sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f6f7fa"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:gravity="center"
        android:text="Thanks by Al Kazi Akash"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f6f7fa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
